<%- include("_header") -%>
<h2>Customer Update</h2>
<form action="/updatecustomer/<%= x.cusid %>" method="POST">
    
    <table>
        <tr>
            <td><label for="cusid">ID</label>:</td>
            <td><input type="number" name="cusid" id="cusid" value="<%= x.cusid %>" readonly style="background-color: gray;" /></td>
        </tr>
        <tr>
            <td><label for="cusFname">First Name</label>:</td>
            <td><input type="text" name="cusfname" id="cusfname" value="<%= x.cusfname %>" required/></td>
        </tr>
        <tr>
            <td><label for="cusLname">Last Name</label>:</td>
            <td><input type="text" name="cuslname" id="cuslname" value="<%= x.cuslname %>" required/></td>
        </tr>
        <tr>
            <td><label for="cusstate">State</label>:</td>
            <td><input type="text" name="cusstate" id="cusstate" value="<%= x.cusstate %>" pattern="[A-Za-z]{2}" maxlength="2" Title="Enter a 2 character state" required/></td>
        </tr>
        <tr>
            <td><label for="cusSalesytd">Sales YTD</label>:</td>
            <td><input type="number" name="cussalesytd" id="cusSalesytd" value="<%= x.cussalesytd %>" required/></td>
        </tr>
        <tr>
            <td><label for="cussalesprev">Previous Years Sales</label>:</td>
            <td><input type="number" name="cussalesprev" id="cussalesprev" value="<%= x.cussalesprev %>" required/></td>
        </tr>
        <tr>
            <td span="1">
                <button class="edit" style="float: center" type="update" value="Update Customer" >Update Customer</button>
            </td>
        </tr>
    </table>
</form>
<%if (msg==="" ){%>

    <% }else if (msg===1) {%>
        <h1>Customer Updated Successfully!</h1>

        <% } else { %>
            <h1>Record Not Updated</h1>
            <% };%>
<%- include("_footer") -%>